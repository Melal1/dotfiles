# Source Var
source $HOME/.config/ZSH/core/variables


# System
alias shutit='shutdown now'


# Printing
alias hpp='lpoption -d'
alias lpimagep='lp -o portrait -o fit-to-page -o media=a4'
alias lpimagel='lp -o landscape -o fit-to-page -o media=a4'
alias print='xdg-open http://localhost:631/'
# Pacman
alias p-s='sudo pacman -S'
alias p-ss='sudo pacman -Ss'
alias Syyu='sudo pacman -Syyu'
alias p-r='sudo pacman -R'

# Hyprland
alias hconf='nvim $Hyprdir/hyprland.conf'
alias hconfig='nvim $Hyprdir/'
alias hcd='cd $Hyprdir'
alias hscripts='cd $Hyprdir/Src/scripts'
alias hauto='nvim $Hyprdir/Src/autostart'

# AwesomeWM
alias aconf='nvim $Awesomedir/rc.lua'
alias aconfig='nvim $Awesomedir/'
alias acd='cd $Awesomedir/'

# ZSH
alias zshrc='nvim $ZSHdir'
alias zsh='nvim $ZSHdir/core/.zshrc'
alias Hypr='sudo nvim /usr/bin/Hypr1'
alias Src='source $ZSHdir/core/.zshrc'
alias zcd='cd $ZSHdir'
alias zalias='nvim $ZSHdir/core/aliases'
alias zvar='nvim $ZSHdir/core/variables'



# Terminal
alias llg='ls -a | grep'
alias ll='ls -a'
alias lll='ls -alh --color=auto'
alias Storage='cd /media/Storage'
alias Z0='unzip'
alias Z0s='sudo unzip'
alias v='nvim'
alias V='sudo -e nvim'
alias fet='$Termfetch'
alias clock='tty-clock -ct'
alias Avman='nvim /media/Storage/ArchLinux\ Setup'
alias Avcd='cd /media/Storage/ArchLinux\ Setup'
alias DT='cd /home/melal/.dotfiles'
alias confrm='rm -ir fontconfig hypr kitty neofetch nvim ZSH'
alias wybar='$HOME/.config/waybar/waybar.sh'

# nvim
alias vim='nvim'
alias vr='nvim /'
alias vh='nvim /home/melal/'
alias cnvim='nvim ~/.dotfiles/nvim/.config/nvim/'
alias cmvim='nvim ~/.dotfiles/nvim/.config/nvim/lua/Melal/'
alias cinit='nvim ~/.dotfiles/nvim/.config/nvim/init.lua'
alias vc='cd /home/melal/.config/ && nvim'
alias cdlua='cd $HOME/.dotfiles/nvim/.config/nvim/lua'
alias notes='nvim $HOME/notes/'
# Kitty
alias ckitty='nvim /home/melal/.config/kitty/kitty.conf'
# neovide
alias vi='env -u WAYLAND_DISPLAY neovide --novsync'
# wallpapers
source $ZSHdir/core/wall

# git
alias glog='git log | grep'
alias gche='git checkout'
alias gpl='git pull'
alias gs='git status'
alias ga='git add'
alias gp='git push'
alias gc='git commit -m'

# other 
alias whatsapp='xdg-open https://web.whatsapp.com/'
alias minecraft='cd ~/minecraft/'
